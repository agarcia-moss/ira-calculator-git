{
  "name": "ira-calculator",
  "version": "1.0.1",
  "description": "IRA Calculator for Apprenticeship Program",
  "private": true,
  "main": "public/electron.js",
  "homepage": "./",
  "author": {
    "name": "IRA Calculator Team",
    "email": "support@ira-calculator.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/agarcia-moss/ira-calculator-git.git"
  },
  "dependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.0",
    "chart.js": "^4.4.0",
    "chartjs-plugin-annotation": "^3.1.0",
    "date-fns": "^2.30.0",
    "electron-log": "^5.1.2",
    "electron-updater": "^6.6.2",
    "lucide-react": "^0.294.0",
    "postcss": "^8.4.0",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "tailwindcss": "^3.3.0",
    "typescript": "^4.9.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "cross-env": "^7.0.3",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "wait-on": "^8.0.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "build-electron": "cross-env GENERATE_SOURCEMAP=false react-scripts build",
    "build-electron-prod": "cross-env GENERATE_SOURCEMAP=false react-scripts build",
    "test": "react-scripts test --passWithNoTests",
    "eject": "react-scripts eject",
    "electron": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-pack": "npm run build-electron-prod && electron-builder",
    "dist": "npm run build-electron-prod && electron-builder --publish=never",
    "dist:mac": "npm run build-electron-prod && npm run dist:mac:x64 && npm run dist:mac:arm64",
    "dist:mac:x64": "electron-builder --mac --x64 --publish=never",
    "dist:mac:arm64": "electron-builder --mac --arm64 --publish=never",
    "dist-publish": "npm run build-electron-prod && electron-builder --publish=always",
    "postinstall": "electron-builder install-app-deps"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.ira.calculator",
    "productName": "IRA Calculator",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "compression": "normal",
    "files": [
      "build/**/*",
      "!build/static/js/*.map",
      "!build/static/css/*.map",
      "public/electron.js",
      "public/preload.js",
      "app-update.yml",
      "node_modules/electron-log/**/*",
      "node_modules/electron-updater/**/*"
    ],
    "asar": true,
    "asarUnpack": [],
    "mac": {
      "category": "public.app-category.productivity",
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "publish": [
      {
        "provider": "github",
        "owner": "agarcia-moss",
        "repo": "ira-calculator-git",
        "releaseType": "release"
      }
    ]
  }
}
