{
  "name": "ira-calculator",
  "version": "1.0.0",
  "description": "IRA Calculator for Apprenticeship Program",
  "private": true,
  "main": "public/electron.js",
  "homepage": "./",
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com"
  },
  "dependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.0",
    "chart.js": "^4.4.0",
    "chartjs-plugin-annotation": "^3.1.0",
    "date-fns": "^2.30.0",
    "electron-log": "^5.1.2",
    "electron-updater": "^6.6.2",
    "lucide-react": "^0.294.0",
    "postcss": "^8.4.0",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "tailwindcss": "^3.3.0",
    "typescript": "^4.9.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12",
    "wait-on": "^8.0.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "build-electron": "GENERATE_SOURCEMAP=false react-scripts build && electron-builder --publish=never",
    "build-electron-prod": "GENERATE_SOURCEMAP=false react-scripts build && electron-builder --publish=never",
    "test": "react-scripts test --passWithNoTests",
    "eject": "react-scripts eject",
    "electron": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-pack": "npm run build-electron-prod && electron-builder",
    "dist": "npm run build-electron-prod && electron-builder --publish=never",
    "dist-publish": "npm run build-electron-prod && electron-builder --publish=always"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.ira.calculator",
    "productName": "IRA Calculator",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "!build/static/js/*.map",
      "!build/static/css/*.map",
      "public/electron.js",
      "public/preload.js",
      "app-update.yml",
      "node_modules/electron-log/**/*",
      "node_modules/electron-updater/**/*"
    ],
    "asar": true,
    "asarUnpack": [],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "agarcia-moss",
        "repo": "ira-calculator-git"
      }
    ]
  }
}
